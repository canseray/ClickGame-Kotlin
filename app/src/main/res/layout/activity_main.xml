<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <android.support.v7.widget.GridLayout
            android:layout_width="399dp"
            android:layout_height="409dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/gridLayout">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="0"
                app:layout_column="0" android:id="@+id/but1" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="0"
                app:layout_column="1" android:id="@+id/but2" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="0"
                app:layout_column="2" android:id="@+id/but3" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="0"
                app:layout_column="3" android:id="@+id/but4" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="1"
                app:layout_column="0" android:id="@+id/but5" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="2"
                app:layout_column="0" android:id="@+id/but6" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="3"
                app:layout_column="0" android:id="@+id/but7" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="1"
                app:layout_column="1" android:id="@+id/but8" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="2"
                app:layout_column="2" android:id="@+id/but9" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="1"
                app:layout_column="2" android:id="@+id/but10" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="1"
                app:layout_column="3" android:id="@+id/but11" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="2"
                app:layout_column="1" android:id="@+id/but12" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="2"
                app:layout_column="3" android:id="@+id/but13" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="3"
                app:layout_column="1" android:id="@+id/but14" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="3"
                app:layout_column="2" android:id="@+id/but15" android:onClick="increateScore"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/butterfly" app:layout_row="3"
                app:layout_column="3" android:id="@+id/but16" android:onClick="increateScore"/>
    </android.support.v7.widget.GridLayout>
    <TextView
            android:text="Time: "
            android:layout_width="161dp"
            android:layout_height="65dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:id="@+id/timeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="28sp"
            android:gravity="center"
    />
    <TextView
            android:text="Score: "
            android:layout_width="166dp"
            android:layout_height="59dp"
            android:id="@+id/scoreText"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="28sp"
            android:gravity="center"/>
</android.support.constraint.ConstraintLayout>